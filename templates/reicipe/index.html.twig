{% extends 'base.html.twig' %}
{% block title %}Toutes les recettes!
{% endblock %}

{% block body %}

	<p>Lorem Ipsum
	</p>
	<p>
		<a class="btn btn-primary" href="{{ url('recip.create') }}">Créer une nouvelle recette</a>
	</p>
	<table class='table'>
		<thead>
			<tr>
				<th>Titre</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<ul>
				{% for recipe in recipes %}
					<tr>
						<td>
							<a href="{{ url('recip.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
						</td>
						<td>
							<a class="btn btn-primary" href="{{ url('recip.edit', {id: recipe.id}) }}">Editer</a>
							<form action="{{ path('recip.delete', {id: recipe.id})}}" method="post" style="display: inline-block">
								<input type="hidden" name="_method" value="DELETE">
								<button class="btn btn-danger" type="submit">Supprimer</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</ul>
		</tbody>
	</table>
{% endblock %}
